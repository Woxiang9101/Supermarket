
page {
  margin: 0;
  padding: 0;
}
.swiper {
  width: 100%;
  height: 740rpx;
  background-color: burlywood;
  position: relative;
}
.swiperItem {
  width: 100%;
  height: 100%;
}
.priceText {
  width: 100%;
  height: 70rpx;
  margin-top: 10rpx;
  padding-left: 20rpx;
}
.price {
  font-size: 50rpx;
  display: inline-block;
  margin-right: 20rpx;
  color: #ff702d;
}
.orprice {
  font-size: 30rpx;
  text-decoration: line-through;
  color: #aaaaaa;
}
.title {
  padding: 0 40rpx 0 40rpx;
  margin-bottom: 10rpx;
}
.tag {
  margin: 10rpx;
}
.select {
  margin: 0 auto;
  padding-left: 40rpx;
  width: 99%;
  border-top: 2rpx solid rgba(154, 154, 154, 0.2);
  border-bottom: 2rpx solid rgba(154, 154, 154, 0.2);
  overflow: hidden;
}
.selText {
  display: inline-block;
  font-size: 25rpx;
  color: #424242;
  width: 100rpx;
  float: left;
  margin-top: 10rpx;
}
.selectedInfo {
  display: inline-block;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.product {
  width: 100%;
  margin-top: 20rpx;
  display: block;
}
.proType {
  float: left;
  width: 500rpx;
}
.proTag {
  padding: 5rpx;
  display: inline-block;
  border-radius: 5rpx;
  border: 2rpx solid rgba(154, 154, 154, 0.71);
  margin: 10rpx;
  font-size: 25rpx;
}
.mount {
  height: 70rpx;
  display: block;
  float: left;
  margin-top: 20rpx;
  width: 100%;
}
.detailText {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
}
.imgBox {
  width: 100%;
}
.detailImg {
  width: 100%;
  height: 740rpx;
  margin: 0;
  padding: 0;
  display: block;
}
.lastTip {
  width: 100%;
  height: 96rpx;
  background-color: #aaaaaa;
  text-align: center;
}
.chart {
  margin: 15%;
  width: 70%;
  border-radius: 50rpx;
  border: 2rpx solid #abaaa2;
  overflow: hidden;
}
.chartLine {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid rgba(154, 154, 154, 0.45);
  border-right: none;
  border-left: none;
  border-top: none;
}
.proName {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  text-align: right;
  padding-right: 20rpx;
  border: 2rpx solid #9a9a9a;
  border-bottom: none;
  border-left: none;
  border-top: none;
}
.proValue {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  text-align: left;
  padding-left: 20rpx;
}
.noticeBar {
  margin-top: 10rpx;
}